<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_product_seller_tree" model="ir.ui.view">
            <field name="name">view.product.seller.tree</field>
            <field name="model">product.seller</field>
            <field name="arch" type="xml">
                <tree string="Product Seller tree">
                    <field name="product_id"  string="Sản phẩm"/>
                    <field name="seller_id" string="Seller"/>
                    <field name="price_bidding" string="Giá hiện tại"  />

                </tree>
            </field>
        </record>

        <record id="view_product_seller_form" model="ir.ui.view">
            <field name="name">view.product.seller.form</field>
            <field name="model">product.seller</field>
            <field name="arch" type="xml">
                <form string="Seller Form">
                    <group col="4">

                       <field name="product_id"  string="Sản phẩm"/>
                    <field name="seller_id" string="Seller"/>
                    <field name="price_bidding" string="Giá hiện tại"  />


                    </group>
                </form>
            </field>
        </record>

        <record id="view_product_seller_search" model="ir.ui.view">
            <field name="name">view.product.seller.search</field>
            <field name="model">product.seller</field>
            <field name="arch" type="xml">
                <search string="Seller Search">
                   <field name="product_id"  string="Sản phẩm"/>
                    <field name="seller_id" string="Seller"/>

                </search>
            </field>
        </record>

        <record id="action_open_product_seller" model="ir.actions.act_window">
            <field name="name">product.seller</field>
            <field name="res_model">product.seller</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_seller_tree"/>
            <!--<field name="search_view_id" ref="view_product_seller_search"/>-->



        </record>





</odoo>

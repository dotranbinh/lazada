<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_seller_seller_tree" model="ir.ui.view">
            <field name="name">view.seller.seller.tree</field>
            <field name="model">seller.seller</field>
            <field name="arch" type="xml">
                <tree string="Seller tree">
                    <field name="name"  string="Tên Seller"/>
                    <field name="code" string="Mã"/>
                    <field name="url_api"  />
                    <field name="user_id" />
                    <field name="api_key" />

                </tree>
            </field>
        </record>

        <record id="view_seller_seller_form" model="ir.ui.view">
            <field name="name">view.seller.seller.form</field>
            <field name="model">seller.seller</field>
            <field name="arch" type="xml">
                <form string="Seller Form">
                    <group col="4">

                        <field name="name"  string="Tên Seller"/>
                    <field name="code" string="Mã"/>
                    <field name="url_api"  />
                    <field name="user_id" />
                    <field name="api_key" />


                    </group>
                </form>
            </field>
        </record>

        <record id="view_seller_seller_search" model="ir.ui.view">
            <field name="name">view.seller.seller.search</field>
            <field name="model">seller.seller</field>
            <field name="arch" type="xml">
                <search string="Seller Search">
                   <field name="name"  string="Tên Seller"/>
                    <field name="code" string="Mã"/>
                </search>
            </field>
        </record>

        <record id="action_open_seller_seller" model="ir.actions.act_window">
            <field name="name">seller.seller</field>
            <field name="res_model">seller.seller</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_seller_seller_tree"/>
            <!--<field name="search_view_id" ref="view_seller_seller_search"/>-->



        </record>





</odoo>
